---
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: stash-config-v1
  namespace: media
  labels:
    app.kubernetes.io/name: &name stash
    app.kubernetes.io/instance: *name
    snapshot.home.arpa/enabled: "true"
spec:
  accessModes:
    - ReadWriteOnce

  resources:
    requests:
      storage: 10Gi
  storageClassName: longhorn
